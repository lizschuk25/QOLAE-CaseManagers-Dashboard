<script>
    // ===== TOGGLE CASE DETAILS =====
    function toggleCaseDetails(caseId) {
        const detailsRow = document.getElementById(caseId + '-details');
        const btn = event.target;

        if (detailsRow.classList.contains('show')) {
            detailsRow.classList.remove('show');
            btn.textContent = '+';
        } else {
            // Close all other expanded cases
            document.querySelectorAll('.case-details-row').forEach(row => {
                row.classList.remove('show');
            });
            document.querySelectorAll('.expand-btn').forEach(button => {
                button.textContent = '+';
            });

            // Open this case
            detailsRow.classList.add('show');
            btn.textContent = '‚àí';
        }
    }

    // ===== LISTEN FOR FILTER EVENTS FROM PARENT =====
    window.addEventListener('filterCases', function(event) {
        const filter = event.detail.filter;
        const rows = document.querySelectorAll('#casesTableBody tr[data-case-id]');
        const filterNotice = document.getElementById('filterNotice');
        const filterType = document.getElementById('filterType');
        const emptyState = document.getElementById('emptyState');
        const casesTable = document.getElementById('casesTable');
        let visibleCount = 0;

        if (filter === 'all') {
            // Show all cases
            rows.forEach(row => {
                row.style.display = 'table-row';
                visibleCount++;
            });
            filterNotice.classList.remove('show');
            emptyState.style.display = 'none';
            casesTable.style.display = 'table';
        } else {
            // Filter cases by priority
            rows.forEach(row => {
                const priority = row.getAttribute('data-priority');
                if (priority === filter) {
                    row.style.display = 'table-row';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                    // Also hide the details row
                    const caseId = row.getAttribute('data-case-id');
                    const detailsRow = document.getElementById(caseId + '-details');
                    if (detailsRow) {
                        detailsRow.classList.remove('show');
                    }
                }
            });

            // Show filter notice
            filterNotice.classList.add('show');
            filterType.textContent = filter.charAt(0).toUpperCase() + filter.slice(1);
        }

        // Show empty state if no cases match
        if (visibleCount === 0) {
            emptyState.style.display = 'block';
            casesTable.style.display = 'none';
        } else {
            emptyState.style.display = 'none';
            casesTable.style.display = 'table';
        }

        // Update count
        const plural = visibleCount === 1 ? 'case' : 'cases';
        document.getElementById('caseCount').textContent = `${visibleCount} ${plural} shown`;
    });

    // ===== CLEAR FILTER =====
    function clearCaseFilter() {
        window.parent.clearFilter();
    }

    console.log('My Cases tab loaded');
</script>
